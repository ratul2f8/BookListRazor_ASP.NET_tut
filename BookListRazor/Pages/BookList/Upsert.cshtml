@page
@model BookListRazor.Pages.BookList.UpsertModel
<br />
<h2 class="text-info">@(Model.Book.Id != 0 ? "Edit" : "Create") Book</h2>
<br />
<div class="border container" style="padding:30px">
    <form method="post">
        @*You have to store the id in the asp-for tag in order to bind property
        Otherwise, Book.Id will not be passed/retreived*@
        @if (Model.Book.Id != 0)
        {
            <input type="hidden" asp-for="Book.Id" />
        }
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.Author"></span>

        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="Book.ISBN"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <button type="submit" class="btn btn-primary form-control">
                    @(Model.Book.Id != 0 ? "Update" : "Create")
                </button>
            </div>
            <div class="col-3">
                <a class="btn btn-success form-control" asp-page="Index">Back to List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}